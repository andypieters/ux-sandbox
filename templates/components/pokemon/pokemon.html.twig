<div class="card">
    <img src="{{ this.image }}" class="card-img-top" alt="{{ this.name }}">
    <div class="card-body">
        <h5 class="card-title">{{ this.id }}. {{ this.name }}</h5>
        <p>{{ this.type }}</p>
        <ul>
            {% for stat in this.stats %}
                <li>{{ stat.stat.name }}: {{ stat.base_stat }}</li>
            {% endfor %}
        </ul>
    </div>
</div>